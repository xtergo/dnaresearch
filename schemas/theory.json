{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dnaresearch.org/schemas/theory.json",
  "title": "Theory Schema",
  "description": "JSON schema for genomic theories with versioning support",
  "type": "object",
  "required": ["id", "version", "scope", "criteria", "evidence_model"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique theory identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "scope": {
      "type": "string",
      "enum": ["autism", "cancer", "cardiovascular", "neurological", "metabolic"],
      "description": "Research scope/domain"
    },
    "criteria": {
      "type": "object",
      "properties": {
        "genes": {
          "type": "array",
          "items": {"type": "string"}
        },
        "pathways": {
          "type": "array", 
          "items": {"type": "string"}
        },
        "phenotypes": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "evidence_model": {
      "type": "object",
      "required": ["priors", "likelihood_weights"],
      "properties": {
        "priors": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "likelihood_weights": {
          "type": "object",
          "properties": {
            "variant_hit": {"type": "number", "minimum": 0},
            "segregation": {"type": "number", "minimum": 0},
            "pathway": {"type": "number", "minimum": 0}
          }
        }
      }
    }
  }
}